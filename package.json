{
  "name": "site-franchini",
  "version": "1.0.0",
  "description": "Site web de Franchini - Concessionnaire Deutz-Fahr",
  "private": true,
  "scripts": {
    "dev": "bundle exec jekyll serve --watch --port 3000 --incremental",
    "build": "bundle exec jekyll build",
    "start": "bundle exec jekyll serve --port 3000",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=16.0.0",
    "ruby": ">=3.1.0"
  },
  "dependencies": {
    "@vercel/static-build": "^3.0.0"
  },
  "devDependencies": {
    "vercel": "^28.0.0"
  },
  "vercel": {
    "buildCommand": "npm install && bundle install && bundle exec jekyll build",
    "outputDirectory": "_site",
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  },
  "browserslist": [
    "defaults"
  ]
}
