{
  "name": "site-franchini",
  "version": "1.0.0",
  "description": "Site web du concessionnaire Franchini",
  "private": true,
  "scripts": {
    "start": "bundle exec jekyll serve --livereload --incremental",
    "build": "bundle exec jekyll build",
    "vercel-build": "./vercel-build.sh",
    "serve": "bundle exec jekyll serve",
    "clean": "bundle exec jekyll clean",
    "test": "npm run lint:js && npm run lint:css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "lint:css": "stylelint 'assets/css/**/*.css'",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md,html,css,scss}'",
    "prepare": "echo 'Skipping husky install for Vercel'"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0",
    "ruby": ">= 3.2.0 < 3.3.0"
  },
  "cacheDirectories": [
    "node_modules",
    "vendor/bundle"
  ],
  "dependencies": {
    "@vercel/static-build": "^1.3.35",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.0.1"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,html}": [
      "prettier --write"
    ]
  }
}
