{
  "name": "site-franchini",
  "version": "1.0.0",
  "description": "Site web de Franchini - Concessionnaire Deutz-Fahr",
  "private": true,
  "scripts": {
    "build": "bundle install && bundle exec jekyll build --config _config.yml,_config_vercel.yml --trace",
    "vercel-build": "npm install && npm run build",
    "start": "bundle exec jekyll serve --config _config.yml,_config_vercel.yml --watch --incremental",
    "minify": "gulp",
    "clean": "gulp clean && rm -rf _site .jekyll-cache .sass-cache",
    "dev": "gulp watch",
    "test": "bundle exec htmlproofer ./_site --only-4xx --check-html --allow-hash-href"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "del": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "vercel": {
    "outputDirectory": "_site"
  }
}
