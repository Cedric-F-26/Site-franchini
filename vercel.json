{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "build": {
    "env": {
      "JEKYLL_ENV": "production"
    }
  },
  "installCommand": "chmod +x vercel-build.sh && ./vercel-build.sh"
}
