{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "build": {
    "env": {
      "JEKYLL_ENV": "production"
    },
    "outputDirectory": "_site"
  },
  "installCommand": "gem install bundler jekyll && bundle install"
}
