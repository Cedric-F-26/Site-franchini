{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "build": {
    "env": {
      "JEKYLL_ENV": "production"
    }
  },
  "installCommand": "gem install bundler && bundle install --jobs=3 --retry=3 && npm install",
  "buildCommand": "bundle exec jekyll build --config _config.yml,_config_vercel.yml"
}
