{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site",
        "installCommand": "gem install bundler && bundle install --jobs=3 --retry=3 --deployment && npm install",
        "buildCommand": "bundle exec jekyll build --config _config.yml,_config_vercel.yml --trace"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "JEKYLL_ENV": "production",
      "LANG": "en_US.UTF-8",
      "RUBY_VERSION": "3.1.4",
      "BUNDLE_WITHOUT": "development:test"
    }
  }
}
