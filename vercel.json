{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site"
      }
    }
  ],
  "env": {
    "RUBY_VERSION": "2.7.8",
    "NODE_VERSION": "18.x",
    "BUNDLE_PATH": "vendor/bundle",
    "BUNDLE_APP_CONFIG": ".bundle",
    "BUNDLE_WITHOUT": "development:test",
    "JEKYLL_ENV": "production",
    "NODE_ENV": "production",
    "BUNDLE_RETRY": "3",
    "BUNDLE_JOBS": "4"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}