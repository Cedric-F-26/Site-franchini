{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site"
      }
    }
  ],
  "build": {
    "env": {
      "RUBY_VERSION": "3.2.0",
      "NODE_VERSION": "18.x",
      "BUNDLE_PATH": "vendor/bundle",
      "BUNDLE_APP_CONFIG": ".bundle",
      "BUNDLE_WITHOUT": "development:test",
      "JEKYLL_ENV": "production"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}