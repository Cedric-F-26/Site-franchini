{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site"
      }
    }
  ],
  "build": {
    "env": {
      "JEKYLL_ENV": "production"
    }
  },
  "installCommand": "gem install bundler jekyll && bundle install"
}
