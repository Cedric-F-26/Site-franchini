{
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "_site",
        "installCommand": "chmod +x vercel-build.sh && ./vercel-build.sh"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production",
      "JEKYLL_ENV": "production",
      "BUNDLE_PATH": "/var/task/vendor/bundle",
      "BUNDLE_GEMFILE": "./Gemfile",
      "BUNDLE_JOBS": "4",
      "BUNDLE_RETRY": "3"
    }
  },
  "env": {
    "NODE_VERSION": "18.x",
    "RUBY_VERSION": "3.2.2",
    "BUNDLER_VERSION": "2.4.22"
  },
  "installCommand": "npm install",
  "buildCommand": "./vercel-build.sh",
  "outputDirectory": "_site",
  "framework": null,
  "regions": ["cdg1"],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|otf)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}